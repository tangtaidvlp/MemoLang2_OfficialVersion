<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.Activity.SignUpActivity" android:background="@drawable/background">

        <TextView
                android:fontFamily="@font/signpainter_housescript_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="63sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.100000024" android:visibility="invisible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_height="230dp"
                android:layout_width="match_parent"
                android:alpha="1"
                android:id="@+id/background_sign_up_successfully"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.25"
                android:visibility="gone">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/round_white_background"
                    android:id="@+id/img_background_sign_up_successfully"
                    android:background="@drawable/round_white_background"
                    android:alpha="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:text="Sign up successfully"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_notification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="21sp" android:textColor="#000000"
                    android:layout_marginTop="45dp" android:fontFamily="@font/segoeui" android:textAlignment="center"/>
            <TextView
                    android:gravity="center"
                    android:text="Back to sign in"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/round_light_red_background"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:fontFamily="@font/seguisb"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background_sign_up_successfully"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1" android:paddingStart="55dp" android:paddingEnd="55dp"
                    android:id="@+id/btn_back_to_sign_in" android:layout_marginBottom="46dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_height="230dp"
                android:layout_width="match_parent"
                android:alpha="1"
                android:id="@+id/background_sign_up_fail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.25"
                android:visibility="gone">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/round_white_background"
                    android:id="@+id/img_background_sign_up_fail"
                    android:background="@drawable/round_white_background"
                    android:alpha="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:text="Error happened, please try again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_fail_notification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="21sp" android:textColor="#000000"
                    android:layout_marginTop="45dp" android:fontFamily="@font/segoeui" android:textAlignment="center"/>
            <TextView
                    android:gravity="center"
                    android:text="Check again"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/round_light_red_background"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:fontFamily="@font/seguisb"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background_sign_up_fail"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1" android:paddingStart="55dp" android:paddingEnd="55dp"
                    android:id="@+id/btn_check_again" android:layout_marginBottom="46dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_height="370dp"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:alpha="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/background_sign_up"
                android:visibility="gone">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/round_white_background"
                    android:id="@+id/img_background_sign_up"
                    android:background="@drawable/round_white_background"
                    android:alpha="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_margin="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:maxWidth="600dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:minWidth="600dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintWidth_max="600dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:layout_margin="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/background_sign_up"
                    app:layout_constraintVertical_bias="0.0"
                    android:maxWidth="600dp">

                <TextView
                        android:text="Email  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="16sp"
                        android:textColor="#5F5F70"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/txt_email"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="31dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/edt_email"
                        app:layout_constraintTop_toBottomOf="@id/txt_email"
                        android:background="@drawable/round_white_background_with_border"
                        android:layout_marginStart="24dp"
                        android:paddingStart="14dp"
                        android:textSize="14sp"
                        android:text="somebody@something.com"
                        android:elevation="4dp"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="24dp" android:paddingBottom="1dp"/>

                <TextView
                        android:text="Please enter your email"
                        app:layout_constraintTop_toBottomOf="@id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_error_email"
                        android:textColor="@color/input_alert_color"
                        android:layout_marginStart="45dp"
                        app:layout_constraintStart_toEndOf="@+id/edt_email"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" android:visibility="gone"/>

                <TextView
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_email"
                        android:textSize="16sp"
                        android:textColor="#5F5F70"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/txt_password"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="31dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/edt_password"
                        app:layout_constraintTop_toBottomOf="@id/txt_password"
                        android:background="@drawable/round_white_background_with_border"
                        android:layout_marginStart="24dp"
                        android:paddingStart="14dp"
                        android:textSize="14sp"
                        android:text="tangtaidvlp@gmail.com"
                        android:elevation="4dp"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="24dp" android:paddingBottom="1dp"/>
                <TextView
                        android:text="Please enter your password"
                        app:layout_constraintTop_toBottomOf="@id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_error_password"
                        android:textColor="@color/input_alert_color"
                        android:layout_marginStart="45dp"
                        app:layout_constraintStart_toEndOf="@+id/edt_password"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" android:visibility="gone"/>
                <TextView
                        android:text="Re-enter password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edt_password"
                        android:textSize="16sp"
                        android:textColor="#5F5F70"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/txt_reenter_password"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="31dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_reenter_password"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/edt_reenter_password"
                        android:background="@drawable/round_white_background_with_border"
                        android:paddingStart="14dp"
                        android:layout_marginEnd="24dp"
                        android:textSize="14sp"
                        android:elevation="4dp"
                        android:fontFamily="@font/segoeui"
                        app:layout_constraintEnd_toStartOf="@+id/edt_password"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="24dp" android:paddingBottom="1dp"/>
                <TextView
                        android:text="Your password does not match"
                        app:layout_constraintTop_toBottomOf="@id/edt_reenter_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_error_reenter_password"
                        android:textColor="@color/input_alert_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="45dp" android:visibility="gone"/>
                <LinearLayout
                        app:layout_constraintTop_toBottomOf="@id/edt_reenter_password"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txt_error_reenter_password"
                        android:layout_marginTop="33dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center_horizontal">
                    <TextView
                            android:gravity="center"
                            android:text="Sign up"
                            android:layout_width="115dp"
                            android:layout_height="40dp"
                            android:id="@+id/btn_sign_up"
                            android:background="@drawable/round_yellow_background"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:fontFamily="@font/seguisb"
                            android:maxWidth="10dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/sign_up_widgets_group"
                                                app:constraint_referenced_ids="txt_title,background_sign_up"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="3dp"
        android:gravity="fill_vertical"
        android:orientation="vertical"
        android:weightSum="3">

        <RadioGroup
            android:id="@+id/rdgr_card_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:text="Height"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbtn_height_normal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/background_normal_flashcard_height_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Normal"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbtn_height_wide"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/background_wide_flashcard_height_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Wide"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

        </RadioGroup>

        <!--    Front-->

        <RadioGroup
            android:id="@+id/rdgr_card_front_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/seguisb"
                android:text="Front side"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbtn_front_image_with_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/background_has_text_flashcard_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Image with text"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbtn_front_image_without_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/background_no_text_flashcard_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Image without text"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

        </RadioGroup>


        <!--    Back-->

        <RadioGroup
            android:id="@+id/rdgr_card_back_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/seguisb"
                android:text="Back side"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdbtn_back_image_with_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/background_has_text_flashcard_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Image with text"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbtn_back_image_without_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/background_no_text_flashcard_checkbox"
                android:drawablePadding="15dp"
                android:fontFamily="@font/seguisb"
                android:layoutDirection="rtl"
                android:text="Image without text"
                android:textColor="@color/checkbox_text_color"
                android:textSize="16sp" />

        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>

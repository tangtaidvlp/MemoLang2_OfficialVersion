<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_5dp_white_background"
            android:elevation="7dp"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingTop="13dp"
            android:paddingEnd="14dp"
            android:paddingBottom="13dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/vwgrp_move_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_move"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:padding="1dp"
                    android:src="@drawable/image_icon_move_blue" />

                <TextView
                    android:id="@+id/txt_move_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguisb"
                    android:includeFontPadding="false"
                    android:paddingEnd="15dp"
                    android:text="Move cards"
                    android:textColor="@color/app_blue"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="9dp"
                android:alpha="0.5"
                android:background="@color/app_blue" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/vwgrp_delete_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_bin_delete"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:padding="1dp"
                    android:src="@drawable/image_icon_delete_blue" />

                <TextView
                    android:id="@+id/txt_delete_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seguisb"
                    android:includeFontPadding="false"
                    android:text="Delete cards"
                    android:textColor="@color/app_blue"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            tools:context=".view.activity.SearchVocabularyActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewgroup_language_option"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/app_less_blue"
                android:elevation="5dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/center_vertical_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp"
                    app:layout_constraintGuide_percent="0.5" />

            <LinearLayout
                    android:id="@+id/viewgroup_txt_source_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/center_vertical_guideline"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/center_vertical_guideline">

                <TextView
                        android:id="@+id/txt_source_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:paddingBottom="3dp"
                        android:text="English"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />

                <ImageView
                        android:id="@+id/img_choose_source_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/white_down_arrow" />

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/viewgroup_txt_target_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/center_vertical_guideline"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/center_vertical_guideline">

                <TextView
                        android:id="@+id/txt_target_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:paddingBottom="3dp"
                        android:text="Vietnamese"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />

                <ImageView
                        android:id="@+id/img_choose_target_lang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/white_down_arrow" />

            </LinearLayout>


            <ImageView
                    android:id="@+id/btn_swap"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@color/app_less_blue"
                    android:src="@drawable/white_swap_button"
                    app:layout_constraintBottom_toTopOf="@+id/center_vertical_guideline"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/center_vertical_guideline" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
                android:id="@+id/edt_text"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:background="#ffffff"
                android:elevation="5dp"
                android:fontFamily="@font/segoeui"
                android:gravity="top|left"
                android:hint="Tap here to enter text"
                android:maxLines="1"
                android:overScrollMode="always"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:textColor="@color/quite_black_text"
                android:textColorHint="@color/more_hard_hint_color"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewgroup_language_option" />

        <TextView
                android:id="@+id/txt_translation"
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:elevation="5dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:hint="Your translation here"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/quite_black_text"
                android:textColorHint="@color/hint_color"
                android:textSize="19sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_text" />

        <ImageView
                android:id="@+id/btn_add"
                android:layout_width="45dp"
                android:layout_height="51dp"
                android:layout_marginEnd="6dp"
                android:alpha="1"
                android:elevation="5.5dp"
                android:paddingTop="6dp"
                android:src="@drawable/button_blue_add_new_flashcard"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/rcv_recent_search_flashcards"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rcv_recent_search_flashcards"
                app:layout_constraintVertical_bias="1.0" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_recent_search_flashcards"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_translation"></androidx.recyclerview.widget.RecyclerView>

        <ImageView
                android:id="@+id/img_black_background_choose_language"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="#000000"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_choose_source_language"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="84dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/round_white_background"
                android:elevation="6dp"
                android:minWidth="100dp"
                android:minHeight="300dp"
                android:scaleX="0"
                android:scaleY="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.3" />

        <androidx.constraintlayout.widget.Group
                android:id="@+id/group_choose_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="img_black_background_choose_language,rcv_choose_source_language" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
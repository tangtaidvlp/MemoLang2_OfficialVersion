<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_icon"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/image_icon_vocabulary_mean" />

    <TextView
        android:id="@+id/txt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:fontFamily="@font/seguisb"
        android:gravity="center_vertical"
        android:text="Hello Hello Hello Hello "
        android:textColor="#008FAB"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/img_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="0"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_3dp_blue_background"
        android:elevation="2dp"
        android:padding="5dp"
        android:src="@drawable/image_icon_add_white" />

</androidx.appcompat.widget.LinearLayoutCompat>
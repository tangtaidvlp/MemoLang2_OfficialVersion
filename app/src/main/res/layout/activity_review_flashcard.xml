<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data >
        <variable
            name="vwModel"
            type="com.teamttdvlp.memolang.viewmodel.ReviewFlashcardViewModel" />

        <import type="android.view.View"/>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.activity.ReviewFlashcardActivity">

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/app_red"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_flashcard_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/icon_flashcard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_language_set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/segoeui"
                android:paddingBottom="3dp"
                android:text="@{vwModel.setName}"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_cards_left_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="13dp"
                android:layout_weight="1"
                android:fontFamily="@font/segoeui"
                android:gravity="right|center_vertical"
                android:paddingBottom="3dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="@{String.valueOf(vwModel.cardLeftCount)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vwgrp_test_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="5dp"
            android:maxHeight="300dp"
            android:minHeight="120dp"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintVertical_bias="0.0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_front_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1.0"
                        android:fontFamily="@font/segoeui"
                        android:gravity="right"
                        android:text="@{String.valueOf(vwModel.currentPos  + 1)}"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_translation"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="6dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_text_answer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="6dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_test_subject_using"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_using_negative_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_using_positive_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/horizontal_line"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="12dp"
                        android:background="#464646"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_test_subject_using" />

                    <TextView
                        android:id="@+id/txt_using_translation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_line" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vwgrp_input_answer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_white_background_with_border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintBottom_toTopOf="@id/btn_ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/edt_input_answer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:fontFamily="@font/seguisb"
                android:hint="Type your answer here"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingBottom="1dp"
                android:text="Give in"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btn_clear_answer"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:src="@drawable/image_btn_clear"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_valid_answer_border"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_transparent_background_with_red_border"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vwgrp_hint"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="27dp"
            android:padding="2dp"
            android:layout_weight="10"
            android:background="@drawable/round_3dp_white_background_with_border"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_ok"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txt_hint"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:inputType="textNoSuggestions|text"
                android:paddingStart="8dp"
                android:paddingBottom="1dp"
                android:text="@{vwModel.hint}"
                android:textColor="@color/quite_black_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <ImageView
                android:id="@+id/img_grey_light"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingTop="3dp"
                android:background="@color/white"
                android:paddingBottom="3dp"
                android:src="@drawable/image_give_idea"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_red_light"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/white"
                android:src="@drawable/image_give_idea_red"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="61dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btn_ok"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:paddingStart="27dp"
            android:paddingTop="5dp"
            android:paddingEnd="27dp"
            android:paddingBottom="5dp"
            android:src="@drawable/image_up_arrow"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:paddingStart="27dp"
            android:paddingTop="5dp"
            android:paddingEnd="27dp"
            android:paddingBottom="5dp"
            android:src="@drawable/image_right_arrow"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:id="@+id/vwgrp_arrow"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:gravity="center"
            android:clickable="true"
            android:paddingStart="27dp"
            android:paddingTop="5dp"
            android:paddingEnd="27dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/img_up_arrow"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:src="@drawable/image_up_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_very_good_answer"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_light_green_background"
            android:maxHeight="50dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vwgrp_test_subject"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/image_like_button" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_correct_answer"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_light_green_background"
            android:maxHeight="50dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vwgrp_test_subject"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/image_good_answer" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_incorrect_answer"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:maxHeight="50dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vwgrp_test_subject"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/image_wrong_answer" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_bad_answers"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:maxHeight="50dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vwgrp_test_subject"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/image_bad_answer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
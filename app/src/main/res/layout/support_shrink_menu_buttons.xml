<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/round_top_20dp_white_background"
        android:elevation="15dp">

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_button_setting"
            app:layout_constraintEnd_toStartOf="@+id/btn_bubble_search"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.45"
            android:fontFamily="@font/segoeui"
            android:text="Settings"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_setting"
            app:layout_constraintStart_toStartOf="@+id/btn_setting"
            app:layout_constraintTop_toBottomOf="@+id/btn_setting" />

        <ImageView
            android:id="@+id/btn_bubble_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_button_bubble"
            app:layout_constraintEnd_toStartOf="@+id/btn_translate_online"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_setting"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.45"
            android:fontFamily="@font/segoeui"
            android:text="Bubble"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_bubble_search"
            app:layout_constraintStart_toStartOf="@+id/btn_bubble_search"
            app:layout_constraintTop_toBottomOf="@+id/btn_bubble_search" />

        <ImageView
            android:id="@+id/btn_translate_online"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_button_translate"
            app:layout_constraintEnd_toStartOf="@+id/btn_dictionary"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_bubble_search"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.45"
            android:fontFamily="@font/segoeui"
            android:text="Translate"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_translate_online"
            app:layout_constraintStart_toStartOf="@+id/btn_translate_online"
            app:layout_constraintTop_toBottomOf="@+id/btn_translate_online" />


        <ImageView
            android:id="@+id/btn_dictionary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_button_dictionary"
            app:layout_constraintEnd_toStartOf="@+id/btn_button_new_set"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_translate_online"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.45"
            android:fontFamily="@font/segoeui"
            android:text="Dict."
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_dictionary"
            app:layout_constraintStart_toStartOf="@+id/btn_dictionary"
            app:layout_constraintTop_toBottomOf="@+id/btn_dictionary" />

        <ImageView
            android:id="@+id/btn_button_new_set"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/image_button_new_set"
            app:layout_constraintEnd_toStartOf="@+id/btn_button_add"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_dictionary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_add_new_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.45"
            android:fontFamily="@font/segoeui"
            android:text="New set"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_button_new_set"
            app:layout_constraintStart_toStartOf="@+id/btn_button_new_set"
            app:layout_constraintTop_toBottomOf="@+id/btn_button_new_set" />

        <ImageView
            android:id="@+id/btn_button_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/image_button_add_blue_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_button_new_set"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeui"
            android:text="Add"
            android:textColor="@color/app_blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_button_add"
            app:layout_constraintStart_toStartOf="@+id/btn_button_add"
            app:layout_constraintTop_toBottomOf="@+id/btn_button_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
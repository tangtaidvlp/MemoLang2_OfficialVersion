<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.teamttdvlp.memolang.viewmodel.ViewFlashCardListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".view.activity.ViewFlashCardListActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_flashcard_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingStart="19dp"
            android:paddingEnd="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_background"
            app:layout_constraintVertical_bias="0.0" >

        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="#F65046"
                android:id="@+id/img_background"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:id="@+id/img_flashcard_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/icon_flashcard" android:layout_marginTop="16dp"
                android:layout_marginStart="13dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>


        <ImageView
            android:id="@+id/btn_delete_selected_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/button_bin_delete"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="@{String.valueOf(viewModel.flashcardCount)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_flashcard_count"
                app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                android:layout_marginStart="232dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16sp" android:textColor="#ffffff"
                android:fontFamily="@font/segoeui"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toEndOf="@+id/img_background"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginEnd="21dp"/>

        <TextView
            android:id="@+id/txt_language_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoeui"
            android:text="@{viewModel.languageType}"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_flashcard_icon2"
            app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



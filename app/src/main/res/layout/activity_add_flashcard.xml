<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_add_flashcards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.Activity.AddFlashcardActivity">
        <ImageView
                android:id="@+id/img_saved_flashcard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                android:scaleX="0.0"
                android:scaleY="0.0"
                android:src="@drawable/image_saved_flashcard"
        />
        <androidx.constraintlayout.widget.Guideline android:id="@+id/right_side_vertical_guideline"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="100"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_flashcard_viewgroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
        >

            <TextView
                    android:id="@+id/txt_using"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Using"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_error_name6"/>
            <EditText
                    android:id="@+id/edt_using"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_less_round_white_background_with_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:paddingBottom="1dp"
                    android:text="Something here"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_using"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:id="@+id/txt_error_name7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:text="Please enter your name"
                    android:textColor="@color/input_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_using"/>
            <TextView
                    android:id="@+id/txt_translation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Translation"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_text"/>
            <EditText
                    android:id="@+id/edt_translation"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_less_round_white_background_with_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:paddingBottom="1dp"
                    android:text="Phần văn bản của ngôn ngữ nguồn"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_translation"/>
            <TextView
                    android:id="@+id/txt_error_name6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:text="Please enter your name"
                    android:textColor="@color/input_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_translation"/>
            <TextView
                    android:id="@+id/txt_error_name5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="15dp"
                    android:text="Please enter your name"
                    android:textColor="@color/input_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_source_lang"/>
            <TextView
                    android:id="@+id/txt_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Text"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_source_lang"/>
            <EditText
                    android:id="@+id/edt_source_lang"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_less_round_white_background_with_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:paddingBottom="1dp"
                    android:text="English"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/txt_from_sl_to_tl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_type"/>
            <EditText
                    android:id="@+id/edt_target_lang"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_less_round_white_background_with_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:paddingBottom="1dp"
                    android:text="Vietnamese"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_from_sl_to_tl"
                    app:layout_constraintTop_toBottomOf="@+id/txt_type"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_from_sl_to_tl"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:text="to"
                    android:textColor="#A4A5AF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/center_guideline"
                    app:layout_constraintStart_toStartOf="@+id/center_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/txt_type"/>
            <EditText
                    android:id="@+id/edt_text"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_less_round_white_background_with_border"
                    android:elevation="4dp"
                    android:ems="10"
                    android:fontFamily="@font/seguisb"
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:paddingBottom="1dp"
                    android:text="The text of source language"
                    android:textColor="#E84E16"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_text"/>
            <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Type"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/edt_source_lang"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_background"
                    app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:id="@+id/txt_error_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:text="Please enter your name"
                    android:textColor="@color/input_alert_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_text"/>
            <ImageView
                    android:id="@+id/img_background"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@color/light_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <ImageView
                    android:id="@+id/img_flashcard_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/icon_add_new_flashcard"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_language"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_language"/>
            <TextView
                    android:id="@+id/txt_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/segoeui"
                    android:text="Add new flashcard"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background"
                    app:layout_constraintEnd_toEndOf="@+id/img_background"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                    app:layout_constraintTop_toTopOf="parent"/>
            <Button
                    android:id="@+id/btn_save"
                    android:layout_width="38dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_yellow_save"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/txt_language"
                    app:layout_constraintTop_toTopOf="parent"/>
            <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="38dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_yellow_cancel"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background"
                    app:layout_constraintEnd_toStartOf="@+id/btn_save"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/txt_language"
                    app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.Guideline android:id="@+id/center_guideline"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vwModel"
            type="com.teamttdvlp.memolang.viewmodel.ReviewFlashcardEasyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_background_color"
        tools:context=".view.activity.ReviewFlashcardEasyActivity">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/common_margin_start" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_barier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="@dimen/common_margin_end"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/vwgrp_title"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/background_app_gradient_violet"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:hint="Set name here"
                android:includeFontPadding="false"
                android:inputType="textNoSuggestions|text"
                android:paddingEnd="16dp"
                android:paddingBottom="1dp"
                android:text="@{vwModel.setName}"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:translationZ="5dp" />

            <ImageView
                android:id="@+id/btn_speaker_setting"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:alpha="1.0"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:padding="4.5dp"
                android:src="@drawable/image_speaker_setting"
                app:layout_constraintRight_toRightOf="@id/parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/view_background_test_subject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="23dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@id/vwgrp_output_cells"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vwgrp_title" />

        <!--        Cards Left Count-->

        <TextView
            android:id="@+id/txt_title_cards_left_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoeui"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="Cards left: "
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vwgrp_title" />

        <TextView
            android:id="@+id/txt_cards_left_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/seguisb"
            android:gravity="right|center_vertical"
            android:hint="3"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="@{String.valueOf(vwModel.cardLeftCount)}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@id/txt_title_cards_left_count"
            app:layout_constraintStart_toEndOf="@id/txt_title_cards_left_count"
            app:layout_constraintTop_toTopOf="@id/txt_title_cards_left_count"
            app:layout_constraintVertical_bias="0.0" />

        <!--        Passed cards count   -->
        <TextView
            android:id="@+id/txt_title_passed_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoeui"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="Passed cards: "
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_cards_left_count" />

        <TextView
            android:id="@+id/txt_passed_card_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/seguisb"
            android:gravity="right|center_vertical"
            android:hint="3"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="@{String.valueOf(vwModel.passedCardCount)}"
            android:textColor="@color/orange_highlight_text"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@id/txt_title_passed_card_count"
            app:layout_constraintStart_toEndOf="@id/txt_title_passed_card_count"
            app:layout_constraintTop_toTopOf="@id/txt_title_passed_card_count"
            app:layout_constraintVertical_bias="0.0" />

        <!--        Forgotten cards count   -->
        <TextView
            android:id="@+id/txt_title_forgotten_cards_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/segoeui"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="Forgotten cards: "
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_passed_card_count" />

        <TextView
            android:id="@+id/txt_forgotten_cards_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/seguisb"
            android:gravity="right|center_vertical"
            android:hint="3"
            android:includeFontPadding="false"
            android:paddingBottom="3dp"
            android:text="@{String.valueOf(vwModel.missedCardCount)}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@id/txt_title_forgotten_cards_count"
            app:layout_constraintStart_toEndOf="@id/txt_title_forgotten_cards_count"
            app:layout_constraintTop_toTopOf="@id/txt_title_forgotten_cards_count"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/btn_flip_flashcard_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/image_button_flip_flashcard_set"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vwgrp_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vwgrp_test_subject"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:translationZ="2dp"
            app:layout_constraintHeight_min="120dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_forgotten_cards_count"
            app:layout_constraintVertical_bias="0.0">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:orientation="vertical"
                android:minHeight="120dp"
                android:maxHeight="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/txt_front_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1.0"
                        android:fontFamily="@font/segoeui"
                        android:gravity="right"
                        android:paddingTop="3dp"
                        android:paddingEnd="3dp"
                        android:text="@{String.valueOf(vwModel.currentPos  + 1)}"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_text_answer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingEnd="6dp"
                        android:scrollbars="vertical"
                        android:text="Answer"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_translation"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:minHeight="120dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="1dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:text="Translation"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_test_subject_example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:text="Example"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_example_negative_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_example_positive_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/segoeui"
                        android:textSize="20sp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/horizontal_line"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="12dp"
                        android:background="#464646"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_test_subject_example" />

                    <TextView
                        android:id="@+id/txt_example_translation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Example translation"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_line" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/btn_give_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_app_round_100dp_gradient_violet"
            android:text="Give up"
            android:elevation="8dp"
            android:fontFamily="@font/tw_century_regular"
            android:includeFontPadding="false"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/background_output_view"
            app:layout_constraintEnd_toEndOf="@id/parent"
            app:layout_constraintTop_toBottomOf="@id/view_background_test_subject" />

        <View
            android:id="@+id/background_output_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/parent"
            app:layout_constraintEnd_toEndOf="@id/parent"
            app:layout_constraintStart_toStartOf="@id/parent"
            app:layout_constraintTop_toBottomOf="@id/view_background_test_subject" />

        <TextView
            android:id="@+id/txt_input_answer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/seguisb"
            android:background="@color/white"
            android:hint="Your answer here"
            android:inputType="text|textNoSuggestions"
            android:paddingStart="10dp"
            android:paddingBottom="1dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/vwgrp_input_cells"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/line_top_input"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@id/txt_input_answer"
            app:layout_constraintStart_toStartOf="@id/txt_input_answer"
            app:layout_constraintTop_toTopOf="@id/txt_input_answer" />

        <ImageView
            android:id="@+id/line_bottom_input"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@id/txt_input_answer"
            app:layout_constraintStart_toStartOf="@id/txt_input_answer"
            app:layout_constraintTop_toBottomOf="@id/txt_input_answer" />


        <LinearLayout
            android:id="@+id/vwgrp_input_cells"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_app_extra_fuzzy_gradient_violet"
            android:minHeight="50dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/vwgrp_output_cells"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_app_extra_fuzzy_gradient_violet"
            android:maxHeight="200dp"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:translationZ="10dp"
            android:weightSum="3"
            app:layout_constraintBottom_toTopOf="@id/txt_input_answer"
            app:layout_constraintEnd_toEndOf="@id/parent"
            app:layout_constraintStart_toStartOf="@id/parent" />

        <com.teamttdvlp.memolang.view.customview.MyCustomDialog
            android:id="@+id/dialog_exit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/support_exit_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </com.teamttdvlp.memolang.view.customview.MyCustomDialog>

        <com.teamttdvlp.memolang.view.customview.MyCustomDialog
            android:id="@+id/dialog_setting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/round_5dp_white_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/image_speaker_black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/seguisb"
                        android:text="Speaker"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_speaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radio_grp_speaker_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/checkbox_speak_answer_only"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:button="@drawable/check_box_circle_background"
                        android:layoutDirection="rtl"
                        android:text="Speak answer only"/>

                    <RadioButton
                        android:id="@+id/checkbox_speak_question_only"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:button="@drawable/check_box_circle_background"
                        android:layoutDirection="rtl"
                        android:text="Speak question only"/>

                    <RadioButton
                        android:id="@+id/checkbox_speak_both_question_and_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:button="@drawable/check_box_circle_background"
                        android:layoutDirection="rtl"
                        android:text="Speak both question and answer"/>

                </RadioGroup>

            </LinearLayout>

        </com.teamttdvlp.memolang.view.customview.MyCustomDialog>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

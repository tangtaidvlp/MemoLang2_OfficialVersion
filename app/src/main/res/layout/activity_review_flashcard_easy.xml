<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vwModel"
            type="com.teamttdvlp.memolang.viewmodel.ReviewFlashcardEasyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".view.activity.ReviewFlashcardEasyActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_barier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/app_red"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_flashcard_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/icon_flashcard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_language_set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/segoeui"
                android:paddingBottom="3dp"
                android:text="@{vwModel.setName}"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_cards_left_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="13dp"
                android:layout_weight="1"
                android:fontFamily="@font/segoeui"
                android:gravity="right|center_vertical"
                android:paddingBottom="3dp"
                android:text="@{String.valueOf(vwModel.cardLeftCount)}"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vwgrp_test_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="5dp"
            android:maxHeight="300dp"
            android:minHeight="120dp"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/vwgrp_input_answer"
            app:layout_constraintLeft_toLeftOf="@id/left_barrier"
            app:layout_constraintRight_toRightOf="@id/right_barier"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintVertical_bias="0.0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_front_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="1.0"
                        android:fontFamily="@font/segoeui"
                        android:gravity="right"
                        android:text="@{String.valueOf(vwModel.currentPos  + 1)}"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_translation"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="6dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_text_answer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/seguisb"
                        android:gravity="center"
                        android:paddingStart="6dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="6dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_test_subject_using"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_using_negative_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_using_positive_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/horizontal_line"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="12dp"
                        android:background="#464646"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_test_subject_using" />

                    <TextView
                        android:id="@+id/txt_using_translation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/use_flashcard_grey_text_color"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horizontal_line" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_input_answer"
            android:layout_marginRight="15dp"
            android:layout_weight="9"
            android:fontFamily="@font/seguisb"
            android:hint="Your answer here"
            android:inputType="text|textNoSuggestions"
            android:paddingStart="10dp"
            android:paddingBottom="1dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/round_3dp_white_background_with_border"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/vwgrp_input_cells"
            app:layout_constraintEnd_toEndOf="@id/right_barier"
            app:layout_constraintStart_toStartOf="@id/left_barrier"/>

        <LinearLayout
            android:id="@+id/vwgrp_input_cells"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:maxHeight="200dp"
            android:minHeight="50dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/right_barier"
            app:layout_constraintStart_toStartOf="@id/left_barrier" />

        <LinearLayout
            android:id="@+id/vwgrp_output_cells"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_3dp_light_red_background"
            android:alpha="0.2"
            android:maxHeight="200dp"
            android:minHeight="50dp"
            android:paddingStart="10dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="3"
            app:layout_constraintBottom_toTopOf="@id/txt_input_answer"
            app:layout_constraintEnd_toEndOf="@id/right_barier"
            app:layout_constraintStart_toStartOf="@id/left_barrier" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

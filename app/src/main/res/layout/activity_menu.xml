<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.Activity.MenuActivity">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_margin="7dp"
                android:padding="8.5dp"
                android:fontFamily="@font/segoeui"
                android:text="You are in offline mode, searching is not available"
                android:background="#6E6EFF"
                android:id="@+id/txt_offline_mode_notification" android:visibility="gone"/>
        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      app:layout_constraintTop_toTopOf="parent"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      app:layout_constraintLeft_toLeftOf="parent"
                                                      app:layout_constraintRight_toRightOf="parent"
                                                      android:layout_margin="0dp"
                                                      android:gravity="center"
                                                      android:layout_height="match_parent"
                                                      android:orientation="horizontal">
            <ImageView
                    android:src="@drawable/button_menu_add_new_flashcard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_add_flashcard"
                    android:layout_marginStart="37dp"/>

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_learn_flashcard"
                    android:src="@drawable/button_menu_learning_flashcard"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_search"
                    android:src="@drawable/button_menu_search"
                    android:layout_marginEnd="37dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
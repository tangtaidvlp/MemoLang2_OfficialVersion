<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.activity.MenuActivity">

        <ImageView
            android:id="@+id/img_devider_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.0"
            android:elevation="1dp"
            android:background="#25000000"
            app:layout_constraintBottom_toTopOf="@id/rcv_flashcard_set_list"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_flashcard_set_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/layout_animation_slide_from_right_side"
            android:orientation="vertical"
            android:paddingStart="@dimen/common_margin_start"
            android:paddingEnd="@dimen/common_margin_end"
            android:paddingTop="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vwgrp_en_vi_dictionary"></androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/btn_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="0dp"
            android:paddingStart="@dimen/common_margin_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/vwgrp_en_vi_dictionary"
            app:layout_constraintBottom_toBottomOf="@id/vwgrp_en_vi_dictionary"
            android:src="@drawable/image_burger_button"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vwgrp_en_vi_dictionary"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="@dimen/common_margin_top"
            android:layout_marginEnd="@dimen/common_margin_end"
            android:background="@drawable/background_search_bar_gradient_blue"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_menu_button"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/edt_eng_vi_dictionary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:transitionName="vwgrp_en_vi_dictionary"
                android:fontFamily="@font/segoeui"
                android:hint="English-Vietnamese dictionary"
                android:inputType="textPersonName"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="1dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/img_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/image_magnifying_glass" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/btn_en_vi_dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_fuzzy_search_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vwgrp_en_vi_dictionary"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/segoeui"
            android:text="Translate"
            android:textColor="#942BF9"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/btn_search_online"
            app:layout_constraintTop_toTopOf="@id/btn_search_online" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/segoeui"
            android:text="Bubble add"
            android:textColor="#F44F11"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/btn_quick_add"
            app:layout_constraintTop_toTopOf="@id/btn_quick_add" />

        <ImageView
            android:id="@+id/btn_search_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/image_floating_translate_buton_purple"
            app:layout_constraintBottom_toTopOf="@+id/btn_quick_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

        <ImageView
            android:id="@+id/btn_quick_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@id/btn_add_flashcard"
            android:src="@drawable/image_floating_quick_add_button_orange"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btn_add_flashcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/image_floating_add_button_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
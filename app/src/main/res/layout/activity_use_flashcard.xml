<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.activity.UseFlashcardActivity">

    <data>
        <import type="com.teamttdvlp.memolang.model.entity.flashcard.Flashcard"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.teamttdvlp.memolang.viewmodel.UseFlashcardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewgroup_front_flashcard"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/round_10dp_white_background"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_hard_cards_left">

            <TextView
                    android:id="@+id/txt_front_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:fontFamily="@font/segoeui"
                    android:gravity="right"
                    android:paddingTop="1dp"
                    android:paddingRight="6dp"
                    android:text="@{String.valueOf(viewModel.currentCardOrder)}"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_front_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:textColor="@color/use_flashcard_grey_text_color"
                android:textSize="24sp"
                android:visibility="visible"
                android:scrollbars="vertical"
                android:text="@{viewModel.currentCard.text}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/viewgroup_img_swipe_up"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_bar">

            <ImageView
                android:id="@+id/img_swipe_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_swipe_up" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_front_speak"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="27dp"
            android:alpha="1"
            android:background="@drawable/previous_button_background"
            android:fontFamily="@font/seguisb"
            android:padding="6dp"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:paddingRight="12dp"
            android:paddingBottom="4.5dp"
            android:src="@drawable/image_speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewgroup_front_flashcard" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewgroup_back_replica_front_flashcard"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_hard_cards_left">


            <TextView
                android:id="@+id/txt_back_replica_front_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:fontFamily="@font/segoeui"
                android:gravity="right"
                android:paddingTop="1dp"
                android:paddingRight="6dp"
                android:text="@{String.valueOf(viewModel.currentCardOrder)}"
                android:textColor="@color/app_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_back_replica_highlight_front_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:text="@{viewModel.currentCard.text}"
                android:textColor="@color/app_red"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_back_replica_front_card_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:text="@{viewModel.currentCard.text}"
                android:textColor="@color/app_red"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/viewgroup_back_flashcard"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/round_10dp_white_background"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_hard_cards_left">


        <TextView
            android:id="@+id/txt_back_card_using"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="1.0"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:textSize="16dp"
            android:text="@{viewModel.currentCard.using}"
            android:textColor="@color/use_flashcard_grey_text_color"
            android:visibility="@{viewModel.currentCard.using != `` ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                    android:id="@+id/txt_back_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.0"
                    android:fontFamily="@font/segoeui"
                    android:gravity="right"
                    android:paddingTop="1dp"
                    android:paddingRight="6dp"
                    android:text="@{String.valueOf(viewModel.currentCardOrder)"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrv_back_translation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/txt_back_card_using"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scrv_viewgroup_back_translation"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_back_hightlight_card_translation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1.0"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="8dp"
                    android:text="@{viewModel.currentCard.translation}"
                    android:textColor="@color/app_red"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_back_card_translation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="1.0"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="8dp"
                    android:text="@{viewModel.currentCard.translation}"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/title_bar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@color/app_red"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/img_flashcard_icon"
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/icon_flashcard"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/txt_language_set_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/segoeui"
                    android:paddingBottom="3dp"
                    android:text="@{viewModel.languageInfo}"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_background"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            <TextView
                    android:id="@+id/txt_cards_left_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="13dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/segoeui"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="3dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="@{String.valueOf(viewModel.cardLeftCount)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_background"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/img_flashcard_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewgroup_card_other_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:alpha="0.0"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewgroup_back_flashcard">

            <TextView
                android:id="@+id/txt_title_pronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/seguisb"
                android:gravity="top|left"
                android:paddingLeft="10dp"
                android:text="Pronunciation:"
                android:textColor="@color/use_flashcard_grey_text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

            <TextView
                android:id="@+id/txt_pronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/lucida_bright_regular"
                android:gravity="top|left"
                android:text="@{viewModel.currentCard.pronunciation}"
                android:textColor="@color/use_flashcard_grey_text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_title_pronunciation"
                app:layout_constraintStart_toEndOf="@+id/txt_title_pronunciation"
                app:layout_constraintTop_toTopOf="@+id/txt_title_pronunciation" />

            <TextView
                android:id="@+id/txt_title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:gravity="top|left"
                android:paddingLeft="10dp"
                android:text="Type:"
                android:textColor="@color/use_flashcard_grey_text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/segoeui"
                android:gravity="top|left"
                android:text="@{viewModel.currentCard.type}"
                android:textColor="@color/use_flashcard_grey_text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_title_type"
                app:layout_constraintStart_toEndOf="@+id/txt_title_type"
                app:layout_constraintTop_toTopOf="@+id/txt_title_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/btn_easy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.0"
                android:background="@drawable/round_10dp_white_background"

                android:elevation="3dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Easy"
                android:textColor="#07B600"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_hard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_previous_card"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:id="@+id/btn_hard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="40dp"
                android:alpha="0.0"
                android:background="@drawable/round_10dp_white_background"
                android:elevation="3dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Hard"
                android:textColor="#F0161B"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/txt_hard_cards_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/segoeui"
                android:text='@{"Forgotten card: " + viewModel.fogottenCardsCount}'
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_bar" />

        <TextView
                android:id="@+id/txt_hard_cards_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/app_red"
                app:layout_constraintStart_toEndOf="@+id/txt_hard_cards_left"
                app:layout_constraintTop_toBottomOf="@+id/title_bar" />

        <ImageView
            android:id="@+id/btn_back_speak"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="27dp"
            android:alpha="0.0"
            android:background="@drawable/previous_button_background"
            android:fontFamily="@font/seguisb"
            android:padding="6dp"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:paddingRight="12dp"
            android:paddingBottom="4.5dp"
            android:src="@drawable/image_speaker"
            android:text="Previous"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewgroup_card_other_info" />

        <TextView
            android:id="@+id/btn_previous_card"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:alpha="0.0"
            android:background="@drawable/previous_button_background"
            android:fontFamily="@font/seguisb"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:paddingRight="12dp"
            android:paddingBottom="4.5dp"
            android:text="Previous"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/btn_back_speak"
            app:layout_constraintTop_toBottomOf="@+id/viewgroup_card_other_info" />

        <com.teamttdvlp.memolang.view.customview.MyCustomDialert
            android:id="@+id/dialog_exit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.0"
                android:background="@drawable/round_10dp_white_background"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:text="You really want to quit ?"
                    android:textColor="#000000"
                    android:textSize="19sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_yes_quit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/round_3dp_light_red_background"
                        android:fontFamily="@font/seguisb"
                        android:paddingStart="30dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="5dp"
                        android:elevation="3dp"
                        android:text="Yes"
                        android:textColor="#ffffff"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/btn_no_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_3dp_light_red_background"
                        android:fontFamily="@font/seguisb"
                        android:paddingStart="30dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="5dp"
                        android:elevation="3dp"
                        android:text="No"
                        android:textColor="#ffffff"
                        android:textSize="19sp" />
                </LinearLayout>

            </LinearLayout>

        </com.teamttdvlp.memolang.view.customview.MyCustomDialert>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_front_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="viewgroup_front_flashcard,viewgroup_img_swipe_up,btn_front_speak" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_back_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btn_hard,btn_easy,viewgroup_card_other_info,viewgroup_back_flashcard,btn_back_speak" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vwgrp_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vwgrp_search"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/round_3dp_black_background"
                android:elevation="5dp"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_icon_search_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_eng_vi_dictionary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:hint="Keep searching, buddy"
                    android:imeOptions="actionSearch"
                    android:inputType="textPersonName"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:textColorHint="#50ffffff"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/btn_clear_all_text"
                    app:layout_constraintStart_toEndOf="@id/img_search_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btn_clear_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/image_clear_all_text_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/vwgrp_voca_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwgrp_search"
                tools:context=".view.activity.SeeVocabularyActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingStart="17dp"
                    android:paddingEnd="17dp">

                    <TextView
                        android:id="@+id/txt_pronunciation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:fontFamily="@font/lucida_bright_regular"
                        android:includeFontPadding="false"
                        android:paddingRight="5dp"
                        android:text="[e'pri:cjIeI]"
                        android:textColor="#6F6F6F"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:fontFamily="@font/segoeui"
                            android:includeFontPadding="false"
                            android:text="Appreciate"
                            android:textColor="#1F1F1F"
                            android:textSize="28sp" />

                        <ImageView
                            android:id="@+id/btn_speaker"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/image_speaker_black"
                            app:layout_constraintEnd_toEndOf="@+id/img_add_fc_success"
                            app:layout_constraintTop_toBottomOf="@id/img_add_fc_success" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:id="@+id/content_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:background="#ffffff"
                        android:focusable="true"
                        android:orientation="vertical" />

                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/img_hidden_background_to_hide_dictionary_recycler_views"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                android:alpha="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/vwgrp_search"
                app:layout_constraintRight_toRightOf="@+id/vwgrp_search"
                app:layout_constraintTop_toBottomOf="@+id/vwgrp_search"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_dictionary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="16dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/vwgrp_search"
                app:layout_constraintRight_toRightOf="@+id/vwgrp_search"
                app:layout_constraintTop_toBottomOf="@+id/vwgrp_search"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_recent_search_dic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/vwgrp_search"
                app:layout_constraintRight_toRightOf="@+id/vwgrp_search"
                app:layout_constraintTop_toBottomOf="@+id/vwgrp_search"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/img_add_fc_success"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:alpha="0.0"
                android:src="@drawable/image_green_checked_done"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vwgrp_search" />

            <ImageView
                android:id="@+id/img_black_bg_add_flashcard_panel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.0"
                android:background="#000000"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panel_add_flashcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/round_10dp_white_background"
                android:clickable="true"
                android:elevation="10dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_title_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Set name"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:hint="Set name (Optional)"
                    android:inputType="textPersonName"
                    android:paddingLeft="4dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_set_name" />

                <ImageView
                    android:id="@+id/img_choose_set_name_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:elevation="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/image_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_set_name"
                    app:layout_constraintEnd_toEndOf="@+id/edt_set_name"
                    app:layout_constraintTop_toTopOf="@+id/edt_set_name" />

                <TextView
                    android:id="@+id/line_under_set_name"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    android:fontFamily="@font/seguisb"
                    android:paddingStart="4dp"
                    app:layout_constraintEnd_toEndOf="@id/edt_set_name"
                    app:layout_constraintStart_toStartOf="@id/edt_set_name"
                    app:layout_constraintTop_toBottomOf="@id/edt_set_name" />

                <TextView
                    android:id="@+id/txt_title_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Type"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_translation" />

                <EditText
                    android:id="@+id/edt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#E84E16"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

                <TextView
                    android:id="@+id/line_under_type"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/edt_type"
                    app:layout_constraintStart_toStartOf="@id/edt_type"
                    app:layout_constraintTop_toBottomOf="@id/edt_type" />

                <ImageView
                    android:id="@+id/img_choose_type_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:elevation="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/image_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_type"
                    app:layout_constraintEnd_toEndOf="@+id/edt_type"
                    app:layout_constraintTop_toTopOf="@+id/edt_type" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/vwgrp_language_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_set_name">

                    <TextView
                        android:id="@+id/txt_front_lang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        android:fontFamily="@font/sitka_heading_regular"
                        android:hint="Front language"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edt_set_name" />

                    <TextView
                        android:id="@+id/txt_back_lang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="0dp"
                        android:fontFamily="@font/sitka_heading_regular"
                        android:hint="Back language"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edt_set_name" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/txt_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Text"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vwgrp_language_info" />

                <EditText
                    android:id="@+id/edt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#E84E16"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_text" />

                <TextView
                    android:id="@+id/line_under_text"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/edt_text"
                    app:layout_constraintStart_toStartOf="@id/edt_text"
                    app:layout_constraintTop_toBottomOf="@id/edt_text" />

                <TextView
                    android:id="@+id/txt_title_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Translation"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_text" />

                <EditText
                    android:id="@+id/edt_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#E84E16"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_translation" />

                <TextView
                    android:id="@+id/line_under_translation"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/edt_translation"
                    app:layout_constraintStart_toStartOf="@id/edt_translation"
                    app:layout_constraintTop_toBottomOf="@id/edt_translation" />

                <ImageView
                    android:id="@+id/img_choose_translation_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:elevation="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/image_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_translation"
                    app:layout_constraintEnd_toEndOf="@+id/edt_translation"
                    app:layout_constraintTop_toTopOf="@+id/edt_translation" />

                <TextView
                    android:id="@+id/txt_title_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Example"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_type" />

                <EditText
                    android:id="@+id/edt_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:hint="Your example"
                    android:inputType="textPersonName"
                    android:paddingStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_example" />

                <TextView
                    android:id="@+id/line_under_example"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/edt_example"
                    app:layout_constraintStart_toStartOf="@id/edt_example"
                    app:layout_constraintTop_toBottomOf="@id/edt_example" />

                <ImageView
                    android:id="@+id/img_choose_example_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:elevation="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/image_spinner"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_example"
                    app:layout_constraintEnd_toEndOf="@+id/edt_example"
                    app:layout_constraintTop_toTopOf="@+id/edt_example" />

                <TextView
                    android:id="@+id/txt_title_mean_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    android:fontFamily="@font/sitka_heading_regular"
                    android:text="Mean of example"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_example" />

                <EditText
                    android:id="@+id/edt_mean_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:elevation="0dp"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:paddingStart="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="1dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_mean_example" />

                <TextView
                    android:id="@+id/line_under_mean_of_example"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="@id/edt_mean_example"
                    app:layout_constraintStart_toStartOf="@id/edt_mean_example"
                    app:layout_constraintTop_toBottomOf="@id/edt_mean_example" />


                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_5dp_light_yellow_background"
                    android:elevation="5dp"
                    android:fontFamily="@font/seguisb"
                    android:paddingBottom="1dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_mean_example" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_5dp_light_yellow_background"
                    android:elevation="5dp"
                    android:fontFamily="@font/seguisb"
                    android:paddingBottom="1dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_add"
                    app:layout_constraintTop_toBottomOf="@id/edt_mean_example" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_choose_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#CFCFCF"
                    android:elevation="3dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"

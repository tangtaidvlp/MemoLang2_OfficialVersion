<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.UseFlashcardActivity">

    <data>
        <import type="com.teamttdvlp.memolang.data.model.entity.flashcard.Flashcard"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_blue"
        android:focusable="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <!--        Set name Options-->

        <TextView
            android:id="@+id/txt_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dialog_margin_start"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/seguisb"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:inputType="textNoSuggestions"
            android:paddingTop="1dp"
            android:paddingBottom="2dp"
            android:text="Harry Potter"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_set_name_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="0.4"
            android:src="@drawable/image_button_triangle_spinner"
            app:layout_constraintBottom_toBottomOf="@id/txt_set_name"
            app:layout_constraintStart_toEndOf="@id/txt_set_name"
            app:layout_constraintTop_toTopOf="@id/txt_set_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin_end"
            android:src="@drawable/image_kebab_button"
            app:layout_constraintBottom_toBottomOf="@id/txt_set_languages"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_set_name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_flashcard_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_8dp_except_top_left_extreme_dark_blue"
            android:elevation="7dp"
            android:orientation="vertical"
            android:paddingTop="22dp"
            android:paddingBottom="24dp"
            android:scaleX="0.0"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleY="0.0"
            app:layout_constraintHeight_max="300dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/txt_set_name"
            app:layout_constraintTop_toBottomOf="@id/txt_set_name"
            app:layout_constraintWidth_min="210dp" />

        <TextView
            android:id="@+id/btn_create_new_set_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_5dp_white_background"
            android:inputType="textNoSuggestions"
            android:elevation="7dp"
            android:fontFamily="@font/seguisb"
            android:includeFontPadding="false"
            android:maxHeight="300dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="7dp"
            android:text="+ Create new set"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/txt_set_name"
            app:layout_constraintTop_toBottomOf="@id/txt_set_name" />

        <!--        Ngôn ngữ của set name-->

        <TextView
            android:id="@+id/txt_set_languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dialog_margin_start"
            android:inputType="textNoSuggestions"
            android:fontFamily="@font/segoeui"
            android:orientation="horizontal"
            android:text="English - Vietnamese"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_set_name" />

        <ImageView
            android:id="@+id/img_white_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_top_25dp_white_background"
            android:orientation="vertical"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_set_languages" />

        <!--            Create new set-->

        <ImageView
            android:id="@+id/img_turn_off_create_new_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black"
            android:translationZ="15dp"
            android:visibility="gone" />


        <include
            android:id="@+id/layout_functions_panel"
            layout="@layout/support_layout_add_function"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginStart="@dimen/common_margin_start"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="@dimen/common_margin_end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewgroup_front_flashcard"
            app:layout_constraintVertical_bias="0.0" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vwgrp_create_new_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dialog_margin_start"
            android:layout_marginEnd="@dimen/common_dialog_margin_end"
            android:alpha="0.0"
            android:background="@drawable/round_20dp_white_background"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:paddingStart="20dp"
            android:paddingTop="25dp"
            android:paddingEnd="20dp"
            android:translationZ="13dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/sub_vertical_center_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <!--             Set name-->

            <LinearLayout
                android:id="@+id/vwgrp_edt_new_set_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_3dp_white_backgroud_with_light_and_fuzzy_blue_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="13dp"
                android:paddingTop="7dp"
                android:paddingEnd="13dp"
                android:paddingBottom="9dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp"
                    android:src="@drawable/image_icon_edit" />

                <EditText
                    android:id="@+id/edt_new_set_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/segoeui"
                    android:includeFontPadding="false"
                    android:inputType="textNoSuggestions"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_panel_clear_set_name"
                    app:layout_constraintEnd_toStartOf="@id/btn_panel_clear_set_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btn_panel_clear_set_name" />


                <ImageView
                    android:id="@+id/btn_panel_clear_new_set_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingStart="7.5dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/image_button_clear_all_text_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="12dp" />

            </LinearLayout>

            <!--            Front language-->
            <TextView
                android:id="@+id/txt_title_new_set_front_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textNoSuggestions"
                android:fontFamily="@font/segoeui"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Front"
                android:textColor="#CBCBCB"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwgrp_edt_new_set_name" />

            <EditText
                android:id="@+id/edt_new_set_front_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:fontFamily="@font/seguisb"
                android:gravity="left|center_vertical"
                android:inputType="textNoSuggestions"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="English"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/sub_vertical_center_guideline"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_new_set_front_language" />

            <ImageView
                android:id="@+id/img_new_set_front_lang_spinner"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/image_button_app_spinner_grey"
                app:layout_constraintBottom_toBottomOf="@id/edt_new_set_front_language"
                app:layout_constraintRight_toRightOf="@id/edt_new_set_front_language"
                app:layout_constraintTop_toTopOf="@id/edt_new_set_front_language" />

            <TextView
                android:id="@+id/txt_background_center_language_devider_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:inputType="textNoSuggestions"
                android:layout_marginBottom="2dp"
                android:alpha="0.15"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/edt_new_set_back_language"
                app:layout_constraintEnd_toEndOf="@id/sub_vertical_center_guideline"
                app:layout_constraintStart_toStartOf="@id/sub_vertical_center_guideline"
                app:layout_constraintTop_toTopOf="@id/txt_title_new_set_front_language" />

            <!--            Back language-->
            <TextView
                android:id="@+id/txt_title_new_set_back_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:inputType="textNoSuggestions"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoeui"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Back"
                android:textColor="#CBCBCB"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/sub_vertical_center_guideline"
                app:layout_constraintTop_toBottomOf="@id/vwgrp_edt_new_set_name" />

            <EditText
                android:id="@+id/edt_new_set_back_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/seguisb"
                android:gravity="left|center_vertical"
                android:inputType="textNoSuggestions"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="Arabic"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/txt_title_new_set_back_language"
                app:layout_constraintTop_toBottomOf="@id/txt_title_new_set_back_language" />


            <ImageView
                android:id="@+id/img_new_set_back_lang_spinner"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/image_button_app_spinner_grey"
                app:layout_constraintBottom_toBottomOf="@id/edt_new_set_back_language"
                app:layout_constraintRight_toRightOf="@id/edt_new_set_back_language"
                app:layout_constraintTop_toTopOf="@id/edt_new_set_back_language" />

            <!--            CREATE NEW SET BUTTON-->

            <ImageView
                android:id="@+id/btn_panel_create_new_set"
                android:layout_width="47dp"
                android:layout_height="32dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="20.5dp"
                android:src="@drawable/image_button_add_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_new_set_back_language" />

            <!--            ERROR VIEW GROUP-->

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/vwgrp_create_set_error"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.0"
                android:layout_marginBottom="25dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/background_app_round_5dp_gradient_theme_blue"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/common_dialog_margin_start"
                android:paddingEnd="@dimen/common_dialog_margin_end"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_create_set_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:inputType="textNoSuggestions"
                    android:gravity="center"
                    android:text="Error"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btn_in_error_panel_got_it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/round_3dp_20percent_white_background"
                    android:fontFamily="@font/tw_century_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="3dp"
                    android:text="Got it"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/vwgrp_front_lang_choose_language"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:translationZ="13dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/vertical_center_guideline"
            app:layout_constraintTop_toBottomOf="@id/horizontal_center_guideline"
            app:layout_constraintVertical_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_front_recent_chosen_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_top_10dp_app_blue_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:translationZ="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_front_choose_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_bottom_10dp_app_blue_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:translationZ="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/vwgrp_back_lang_choose_language"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="34dp"
            android:alpha="0.0"
            android:elevation="2dp"
            android:orientation="vertical"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:translationZ="13dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical_center_guideline"
            app:layout_constraintTop_toBottomOf="@id/horizontal_center_guideline"
            app:layout_constraintVertical_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_back_recent_chosen_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_top_10dp_app_blue_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:translationZ="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_back_choose_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_bottom_10dp_app_blue_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:translationZ="2dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--         Mặt sau của thẻ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewgroup_back_flashcard"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/common_add_fc_margin_start"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/common_add_fc_margin_start"
            android:background="@drawable/round_10dp_white_background"
            android:orientation="vertical"
            android:elevation="4dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_white_background">

            <ImageView
                android:id="@+id/img_back_light"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="@drawable/round_30_alpha_10dp_white_background"
                android:clickable="false"
                android:elevation="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_back_shadow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="@drawable/round_30_alpha_10dp_black_background"
                android:clickable="false"
                android:elevation="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_back_choose_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:alpha="0.35"
                android:elevation="6dp"
                android:src="@drawable/image_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_back_illustration_picture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#05000000"
                android:padding="40dp"
                android:src="@drawable/image_picture_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_back_load_picture_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_circle_progress_bar"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_back_illustration_picture"
                app:layout_constraintEnd_toEndOf="@+id/img_back_illustration_picture"
                app:layout_constraintStart_toStartOf="@id/img_back_illustration_picture"
                app:layout_constraintTop_toTopOf="@id/img_back_illustration_picture" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round_top_left_10dp_white_background"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:src="@drawable/image_circle_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/vwgrp_back_texts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_back_illustration_picture"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:hint="Translation"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edt_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:hint="Example"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <EditText
                    android:id="@+id/edt_example_translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/segoeuii"
                    android:gravity="center"
                    android:hint="Example translation"
                    android:includeFontPadding="false"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/btn_back_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_bottom_left_10dp_white_background"
                android:fontFamily="@font/seguisb"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="+ Add text"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--         Mặt trước của thẻ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewgroup_front_flashcard"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/common_add_fc_margin_start"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/common_add_fc_margin_start"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_white_background">

            <ImageView
                android:id="@+id/img_front_light"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="@drawable/round_30_alpha_10dp_white_background"
                android:clickable="false"
                android:elevation="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_front_shadow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                android:background="@drawable/round_30_alpha_10dp_black_background"
                android:clickable="false"
                android:elevation="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_front_choose_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:alpha="0.35"
                android:elevation="6dp"
                android:src="@drawable/image_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/img_front_illustration_picture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="#05000000"
                android:padding="40dp"
                android:src="@drawable/image_picture_grey"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_front_dot"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_bottom_left_7dp_white_background"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/image_circle_blue_100dp_radius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_front_load_picture_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_circle_progress_bar"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/img_front_illustration_picture"
                app:layout_constraintEnd_toEndOf="@+id/img_front_illustration_picture"
                app:layout_constraintStart_toStartOf="@id/img_front_illustration_picture"
                app:layout_constraintTop_toTopOf="@id/img_front_illustration_picture" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/vwgrp_front_texts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/img_front_illustration_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

                <EditText
                    android:id="@+id/edt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/seguisb"
                    android:gravity="left|center_vertical"
                    android:hint="Text"
                    android:imeOptions="actionNext"
                    android:includeFontPadding="false"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:maxLines="2"
                    android:paddingStart="6dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="6dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/edt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:hint="Type"
                    android:includeFontPadding="false"
                    android:inputType="textNoSuggestions"
                    android:paddingTop="6dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/edt_pronunciation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="1.0"
                    android:background="@android:color/transparent"
                    android:editable="false"
                    android:fontFamily="@font/sitka_display_regular"
                    android:gravity="center"
                    android:hint="/Pronunciation/"
                    android:paddingStart="6dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="6dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/use_flashcard_grey_text_color"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/btn_front_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/round_top_left_10dp_white_background"
                android:fontFamily="@font/seguisb"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="+ Add text"
                android:textColor="@color/black"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.teamttdvlp.memolang.view.customview.ChooseCardTypeRecyclerView
            android:id="@+id/rcv_choose_card_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:visibility="gone"
            android:alpha="0.0"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:background="@color/white"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintHeight_max="300dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewgroup_front_flashcard" />

        <ImageView
            android:id="@+id/img_flashcard_right_receiver"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:background="@drawable/round_left_50dp_app_blue_background"
            android:elevation="12dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toBottomOf="@id/viewgroup_front_flashcard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewgroup_front_flashcard" />

        <ImageView
            android:id="@+id/img_flashcard_left_receiver"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:background="@drawable/round_right_50dp_app_blue_background"
            android:elevation="12dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toBottomOf="@id/viewgroup_front_flashcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewgroup_front_flashcard" />

        <com.teamttdvlp.memolang.view.customview.MyCustomDialog
            android:id="@+id/dialog_exit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.teamttdvlp.memolang.view.customview.IpaKeyboard
            android:id="@+id/ipa_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:translationZ="25dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
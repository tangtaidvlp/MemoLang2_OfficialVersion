<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".view.activity.SeeVocabularyActivity">

            <LinearLayout
                android:id="@+id/content_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="40dp">

                <TextView
                    android:id="@+id/txt_pronunciation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:fontFamily="@font/lucida_bright_regular"
                    android:paddingRight="5dp"
                    android:text="[e'pri:cjIeI]"
                    android:textColor="#6F6F6F"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:fontFamily="@font/segoeui"
                    android:text="Appreciate"
                    android:textColor="#1F1F1F"
                    android:textSize="27sp" />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/img_add_fc_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="18dp"
            android:alpha="0.0"
            android:src="@drawable/image_green_checked_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/image_grey_speaker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_add_fc_success" />

        <TextView
            android:id="@+id/img_black_bg_card_info_panel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.35"
            android:src="@drawable/button_black_add_new_flashcard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/panel_add_flashcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_10dp_white_background"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:scaleX="0.0"
            android:scaleY="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_title_type"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:text="Type"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_panel_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_type" />

            <ImageView
                android:id="@+id/img_type_spinner"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:elevation="0dp"
                android:src="@drawable/image_spinner"
                app:layout_constraintBottom_toBottomOf="@+id/txt_panel_type"
                app:layout_constraintEnd_toEndOf="@+id/txt_panel_type"
                app:layout_constraintTop_toTopOf="@+id/txt_panel_type" />

            <TextView
                android:id="@+id/txt_title_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:text="Text"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_type" />

            <TextView
                android:id="@+id/txt_panel_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#E84E16"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_text" />

            <TextView
                android:id="@+id/txt_title_translation"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:text="Translation"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_text" />

            <TextView
                android:id="@+id/txt_panel_translation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_translation" />

            <ImageView
                android:id="@+id/img_trans_spinner"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:elevation="0dp"
                android:src="@drawable/image_spinner"
                app:layout_constraintBottom_toBottomOf="@+id/txt_panel_translation"
                app:layout_constraintEnd_toEndOf="@+id/txt_panel_translation"
                app:layout_constraintTop_toTopOf="@+id/txt_panel_translation" />

            <TextView
                android:id="@+id/txt_title_using"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:text="Using"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_translation" />

            <TextView
                android:id="@+id/txt_panel_example"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_using" />

            <ImageView
                android:id="@+id/img_exam_spinner"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:elevation="0dp"
                android:src="@drawable/image_spinner"
                app:layout_constraintBottom_toBottomOf="@+id/txt_panel_example"
                app:layout_constraintEnd_toEndOf="@+id/txt_panel_example"
                app:layout_constraintTop_toTopOf="@+id/txt_panel_example" />

            <EditText
                android:id="@+id/edt_panel_custom_example"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:hint="Type your example here"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_using" />

            <TextView
                android:id="@+id/txt_title_pronunciation"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                android:fontFamily="@font/seguisb"
                android:text="Pronunciation"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_example" />

            <TextView
                android:id="@+id/txt_panel_pronunciation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_10dp_white_background_with_border"
                android:elevation="0dp"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title_pronunciation" />

            <Button
                android:id="@+id/btn_panel_add"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/slightly_round_yellow_background"
                android:elevation="5dp"
                android:fontFamily="@font/seguisb"
                android:paddingBottom="1dp"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_pronunciation" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_choose_translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="10dp"
                android:background="#CFCFCF"
                android:elevation="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_translation"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_choose_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="5dp"
                android:background="#CFCFCF"
                android:elevation="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/txt_panel_example"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_choose_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="10dp"
                android:background="#CFCFCF"
                android:elevation="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_panel_type"
                app:layout_constraintVertical_bias="0.0">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_add_flashcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="panel_add_flashcard,img_black_bg_card_info_panel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

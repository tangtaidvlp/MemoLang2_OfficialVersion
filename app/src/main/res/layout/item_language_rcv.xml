<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="English - Vietnamese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_language"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp" android:fontFamily="@font/segoeui"
            android:textColor="@color/dark_blue_text"
            android:layout_marginStart="19dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_view_list" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="11dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="15dp"/>

    <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:src="@drawable/button_flashcard_list"
            android:background="@color/white"
            android:id="@+id/btn_view_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>
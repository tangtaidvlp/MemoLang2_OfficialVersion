<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Activity.AuthActivity"
        android:background="@drawable/background">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="70dp"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/linearLayout3">
        <Button
                android:text="Google"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:id="@+id/button2"
                android:background="@drawable/round_red_background"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:fontFamily="@font/seguisb"/>
        <Button
                android:text="Facebook"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/button3"
                android:background="@drawable/round_blue_background"
                android:freezesText="false"
                android:elegantTextHeight="false"
                android:autoText="true"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_weight="1"
                android:fontFamily="@font/seguisb"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ut2"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.0">
        <TextView
                android:text="You don't have account ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sda"
                android:freezesText="false"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:fontFamily="@font/segoeuisl"/>
        <TextView
                android:text="Sign up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:freezesText="false"
                android:elegantTextHeight="false"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/segoeui"/>

    </LinearLayout>
    <TextView
            android:fontFamily="@font/signpainter_housescript_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MemoLang"
            android:textSize="63sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/round_white_background"
                android:id="@+id/imageView3"
                android:background="@drawable/round_white_background"
                android:alpha="0.8"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:layout_margin="0dp"
                android:id="@+id/linearLayout">
            <TextView
                    android:text="Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/margin2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:textColor="#5F5F70"
                    android:fontFamily="@font/segoeui"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edt_id"
                    android:background="@drawable/round_white_background_with_border"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:paddingStart="14dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:text="tangtaidvlp@gmail.com"
                    android:elevation="4dp"
                    android:fontFamily="@font/segoeui"/>
            <TextView
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/margin"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:textColor="#5F5F70"
                    android:fontFamily="@font/segoeui"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName|numberPassword"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:background="@drawable/round_white_background_with_border"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:paddingStart="14dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:text="****************"
                    android:elevation="4dp"
                    android:fontFamily="@font/segoeui"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                <TextView
                        android:gravity="center"
                        android:text="Sign in"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:id="@+id/button2s"
                        android:background="@drawable/round_yellow_background"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:fontFamily="@font/seguisb"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
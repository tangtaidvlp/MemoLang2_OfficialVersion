<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.Activity.AuthActivity"
            android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_height="230dp"
                android:layout_width="match_parent"
                android:alpha="1"
                android:id="@+id/background_sign_up_successfully"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.25">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/round_white_background"
                    android:id="@+id/img_background_sign_up_successfully"
                    android:background="@drawable/round_white_background"
                    android:alpha="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            <TextView
                    android:text="Your id or password\n is not correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_notification"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:textSize="21sp" android:textColor="#000000"
                    android:layout_marginTop="45dp"
                    android:textAlignment="center" android:fontFamily="@font/segoeui"/>
            <TextView
                    android:gravity="center"
                    android:text="Check again"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/round_light_red_background"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:fontFamily="@font/seguisb"
                    app:layout_constraintBottom_toBottomOf="@+id/img_background_sign_up_successfully"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1" android:paddingStart="55dp" android:paddingEnd="55dp"
                    android:id="@+id/btn_check_again" android:layout_marginBottom="46dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:fontFamily="@font/signpainter_housescript_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MemoLang"
                android:textSize="63sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.100000024"/>
        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/else_sign_in"
                app:layout_constraintTop_toBottomOf="@+id/container_sign_up_successfullys"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="70dp">
            <Button
                    android:text="Google"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_google_sign_in"
                    android:background="@drawable/round_red_background"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:fontFamily="@font/seguisb"/>
            <Button
                    android:text="Facebook"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="46dp"
                    android:id="@+id/btn_facebook_sign_in"
                    android:background="@drawable/round_blue_background"
                    android:freezesText="false"
                    android:elegantTextHeight="false"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/seguisb"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/else_sign_in"
                app:layout_constraintVertical_bias="0.0" android:layout_marginTop="30dp" android:id="@+id/linearLayout2">
            <TextView
                    android:text="You don't have account ?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="false"
                    android:elegantTextHeight="false"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:fontFamily="@font/segoeuisl"/>
            <TextView
                    android:text="Sign up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:freezesText="false"
                    android:elegantTextHeight="false"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/segoeui" android:id="@+id/btn_sign_up"/>

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_height="290dp"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:alpha="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/container_sign_up_successfullys"
        >
            <ImageView
                    app:layout_constraintWidth_max="600dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/round_white_background"
                    android:id="@+id/background_sign_up_successfullys"
                    android:background="@drawable/round_white_background"
                    android:alpha="0.8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_margin="0dp" app:layout_constraintEnd_toEndOf="parent"
                    android:maxWidth="600dp" app:layout_constraintBottom_toBottomOf="parent" android:minWidth="600dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintWidth_max="600dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:layout_margin="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/container_sign_up_successfullys"
                    app:layout_constraintVertical_bias="0.0"
                    android:maxWidth="600dp">
                <TextView
                        android:text="Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="16sp"
                        android:textColor="#5F5F70"
                        android:fontFamily="@font/segoeui" app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/txt_id" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="31dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/edt_id"
                        app:layout_constraintTop_toBottomOf="@id/txt_id"
                        android:background="@drawable/round_white_background_with_border"
                        android:layout_marginStart="24dp"
                        android:paddingStart="14dp"
                        android:textSize="14sp"
                        android:text="tangtaidvlp@gmail.com"
                        android:elevation="4dp"
                        android:fontFamily="@font/segoeui" app:layout_constraintStart_toEndOf="@+id/linearLayout"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="6dp"
                        android:layout_marginEnd="24dp" android:paddingBottom="1dp"/>
                <TextView
                        android:text="Please enter your id"
                        app:layout_constraintTop_toBottomOf="@id/edt_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_error_id"
                        android:textColor="@color/input_alert_color" android:layout_marginStart="45dp"
                        app:layout_constraintStart_toEndOf="@+id/edt_id" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" android:visibility="gone"/>
                <TextView
                        android:text="Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/edt_id"
                        android:textSize="16sp"
                        android:textColor="#5F5F70"
                        android:fontFamily="@font/segoeui" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:id="@+id/txt_password"
                        android:layout_marginTop="26dp" android:layout_marginStart="31dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_password"
                        android:inputType="textPersonName|numberPassword"
                        android:ems="10"
                        android:id="@+id/edt_password"
                        android:background="@drawable/round_white_background_with_border"
                        android:paddingStart="14dp"
                        android:layout_marginEnd="24dp"
                        android:textSize="14sp"
                        android:text="****************"
                        android:elevation="4dp"
                        android:fontFamily="@font/segoeui" app:layout_constraintEnd_toStartOf="@+id/edt_id"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="6dp"
                        android:layout_marginStart="24dp" android:paddingBottom="1dp"/>
                <TextView
                        android:text="Please enter your password"
                        app:layout_constraintTop_toBottomOf="@id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_error_password"
                        android:textColor="@color/input_alert_color"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="2dp" android:layout_marginStart="45dp" android:visibility="gone"/>
                <Button
                        android:gravity="center"
                        android:text="Sign in"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:id="@+id/btn_sign_in"
                        android:background="@drawable/round_yellow_background"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="33dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="28dp"
                        app:layout_constraintTop_toBottomOf="@id/edt_password"
                        android:fontFamily="@font/seguisb" android:maxWidth="10dp"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintEnd_toEndOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids=",else_sign_in,txt_title,linearLayout2,container_sign_up_successfullys"
                android:id="@+id/sign_in_widget_group"/>
        <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/sign_up_successfully_widgets_group"
                                                app:constraint_referenced_ids="background_sign_up_successfully"
                                                android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
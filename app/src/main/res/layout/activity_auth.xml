<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Activity.AuthActivity"
        android:background="@drawable/background">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:srcCompat="@drawable/image_app_name"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:alpha="1"
            android:layout_marginBottom="262dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/round_white_background"
                android:id="@+id/imageView3"
                android:background="@drawable/round_white_background"
                android:alpha="0.8"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:layout_margin="0dp"
                android:id="@+id/linearLayout">
            <TextView
                    android:text="Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/margin2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:textColor="#5F5F70"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:background="@drawable/round_white_background_with_border"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:paddingStart="14dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:text="tangtaidvlp@gmail.com" />
            <TextView
                    android:text="Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/margin"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:textColor="#5F5F70"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName|numberPassword"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:background="@drawable/round_white_background_with_border"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="6dp"
                    android:paddingStart="14dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="14sp"
                    android:text="****************"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:translationZ="10dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/button_sign_in"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="37dp"/>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
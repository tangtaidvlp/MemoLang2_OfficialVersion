<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="beingViewedCard"
            type="com.teamttdvlp.memolang.model.entity.flashcard.Flashcard" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_black_background_see_card_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:background="#000000"
            android:elevation="6dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/viewgroup_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:alpha="1.0"
            android:background="@drawable/round_10dp_white_background"
            android:elevation="6dp"
            android:gravity="right"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:background="@drawable/round_10dp_white_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Type"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_card_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/segoeui"
                        android:hint=" ___"
                        android:paddingEnd="12dp"
                        android:text="@{beingViewedCard.type}"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Text"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_card_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/seguisb"
                        android:paddingEnd="12dp"
                        android:text="@{beingViewedCard.text}"
                        android:textColor="@color/app_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Translation"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_card_translation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/segoeui"
                        android:paddingEnd="12dp"
                        android:text="@{beingViewedCard.translation}"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Using"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_card_using"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/segoeui"
                        android:hint=" ___"
                        android:paddingEnd="12dp"
                        android:text="@{beingViewedCard.using}"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/seguisb"
                        android:text="Pronunciation"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_card_pronunciation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/segoeui"
                        android:hint=" ___"
                        android:paddingEnd="12dp"
                        android:text="@{beingViewedCard.pronunciation}"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/seguisb"
                android:text="Edit"
                android:textColor="@color/app_blue"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_card_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="img_black_background_see_card_info,viewgroup_card_info"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
